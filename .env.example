# =============================================================================
# AAS AI Editor - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Claude AI Configuration
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-xxxxx
# Model to use (claude-sonnet-4-20250514 recommended for cost/performance balance)
AI_MODEL=claude-sonnet-4-20250514
# Maximum tokens for responses
AI_MAX_TOKENS=4096
# Enable prompt caching for repeated context (reduces costs)
AI_ENABLE_CACHING=true

# -----------------------------------------------------------------------------
# MCP Server Configuration
# -----------------------------------------------------------------------------
MCP_SERVER_PORT=3001
MCP_SERVER_HOST=localhost
# Session timeout in milliseconds (default: 30 minutes)
MCP_SESSION_TIMEOUT_MS=1800000
# Maximum concurrent sessions
MCP_MAX_SESSIONS=100

# -----------------------------------------------------------------------------
# Validation Service Configuration
# -----------------------------------------------------------------------------
VALIDATION_SERVICE_URL=http://localhost:8000
# Enable deep validation (slower but more thorough)
VALIDATION_ENABLE_DEEP=true
# Validation timeout in seconds
VALIDATION_TIMEOUT_SECONDS=30

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Allowed CORS origins (comma-separated, use * for all but disables credentials)
CORS_ALLOWED_ORIGINS=http://localhost:5173
# Rate limit: max requests per minute per IP
RATE_LIMIT_MAX=100
# Trust proxy for accurate IP detection (set to "true", "1", or "loopback" behind reverse proxy)
# TRUST_PROXY=1

# -----------------------------------------------------------------------------
# Web UI Configuration
# -----------------------------------------------------------------------------
# MCP server URL (the /mcp path is appended automatically by the client)
VITE_MCP_SERVER_URL=http://localhost:3001
VITE_APP_TITLE=AAS AI Editor

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Enable debug logging
DEBUG=aas:*
# Node environment
NODE_ENV=development
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Docker/Production Settings
# -----------------------------------------------------------------------------
# Redis URL for session storage (production)
# REDIS_URL=redis://localhost:6379
# PostgreSQL for audit logging (optional)
# DATABASE_URL=postgresql://user:pass@localhost:5432/aas_editor
