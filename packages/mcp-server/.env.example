# MCP Server Configuration

# Anthropic API Key (required for AI chat features)
# Get your key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# Server settings (optional)
MCP_SERVER_PORT=3001
MCP_SERVER_HOST=0.0.0.0

# Session settings (optional)
MCP_SESSION_TIMEOUT_MS=1800000
MCP_MAX_SESSIONS=100

# AI settings (optional)
AI_MODEL=claude-sonnet-4-20250514
AI_MAX_TOKENS=4096
AI_ENABLE_CACHING=true

# External services (optional)
VALIDATION_SERVICE_URL=http://localhost:8000

# Proxy configuration (optional)
# Set to 'true' when behind nginx/reverse proxy for correct client IP detection in rate limiting
# Can also be set to a number (proxy hop count) or 'loopback' for localhost proxies only
TRUST_PROXY=false

# Logging (optional)
LOG_LEVEL=info
