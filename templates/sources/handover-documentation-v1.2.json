{
  "id": "idta-handover-documentation",
  "name": "Handover Documentation",
  "version": "1.2",
  "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/1/2",
  "description": "Documentation handover for assets according to IDTA 02004-1-2",
  "sourceUrl": "https://github.com/admin-shell-io/submodel-templates/tree/main/published/Handover_Documentation",
  "structure": {
    "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/1/2",
    "elements": [
      {
        "idShort": "Document",
        "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/Document/1/2",
        "modelType": "SubmodelElementCollection",
        "required": true,
        "description": "A document entry with metadata and file reference",
        "elements": [
          {
            "idShort": "DocumentId",
            "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/DocumentId/1/2",
            "modelType": "SubmodelElementCollection",
            "required": true,
            "description": "Identification of the document",
            "elements": [
              {
                "idShort": "DocumentDomainId",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/DocumentDomainId/1/2",
                "modelType": "Property",
                "valueType": "xs:string",
                "required": true,
                "description": "Domain identifier for the document"
              },
              {
                "idShort": "ValueId",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/ValueId/1/2",
                "modelType": "Property",
                "valueType": "xs:string",
                "required": true,
                "description": "Unique value identifier within the domain"
              },
              {
                "idShort": "IsPrimary",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/IsPrimary/1/2",
                "modelType": "Property",
                "valueType": "xs:boolean",
                "required": false,
                "description": "Whether this is the primary document ID"
              }
            ]
          },
          {
            "idShort": "DocumentClassification",
            "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/DocumentClassification/1/2",
            "modelType": "SubmodelElementCollection",
            "required": false,
            "description": "Classification of the document",
            "elements": [
              {
                "idShort": "ClassId",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/ClassId/1/2",
                "modelType": "Property",
                "valueType": "xs:string",
                "required": true,
                "description": "Classification identifier"
              },
              {
                "idShort": "ClassName",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/ClassName/1/2",
                "modelType": "MultiLanguageProperty",
                "required": false,
                "description": "Name of the classification in multiple languages"
              },
              {
                "idShort": "ClassificationSystem",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/ClassificationSystem/1/2",
                "modelType": "Property",
                "valueType": "xs:string",
                "required": true,
                "description": "Classification system used (e.g., VDI2770)"
              }
            ]
          },
          {
            "idShort": "DocumentVersion",
            "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/DocumentVersion/1/2",
            "modelType": "SubmodelElementCollection",
            "required": true,
            "description": "Version information for the document",
            "elements": [
              {
                "idShort": "Language",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/Language/1/2",
                "modelType": "Property",
                "valueType": "xs:string",
                "required": true,
                "description": "Language of the document (ISO 639-1 code)"
              },
              {
                "idShort": "DocumentVersionId",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/DocumentVersionId/1/2",
                "modelType": "Property",
                "valueType": "xs:string",
                "required": true,
                "description": "Version identifier of the document"
              },
              {
                "idShort": "Title",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/Title/1/2",
                "modelType": "MultiLanguageProperty",
                "required": true,
                "description": "Title of the document in multiple languages"
              },
              {
                "idShort": "SubTitle",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/SubTitle/1/2",
                "modelType": "MultiLanguageProperty",
                "required": false,
                "description": "Subtitle of the document"
              },
              {
                "idShort": "Summary",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/Summary/1/2",
                "modelType": "MultiLanguageProperty",
                "required": false,
                "description": "Summary of the document content"
              },
              {
                "idShort": "KeyWords",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/KeyWords/1/2",
                "modelType": "MultiLanguageProperty",
                "required": false,
                "description": "Keywords for searching"
              },
              {
                "idShort": "SetDate",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/SetDate/1/2",
                "modelType": "Property",
                "valueType": "xs:date",
                "required": false,
                "description": "Date when this version was set"
              },
              {
                "idShort": "StatusValue",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/StatusValue/1/2",
                "modelType": "Property",
                "valueType": "xs:string",
                "required": false,
                "description": "Status of the document (e.g., Released, Draft)"
              },
              {
                "idShort": "OrganizationName",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/OrganizationName/1/2",
                "modelType": "Property",
                "valueType": "xs:string",
                "required": false,
                "description": "Name of the organization that created the document"
              },
              {
                "idShort": "OrganizationOfficialName",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/OrganizationOfficialName/1/2",
                "modelType": "Property",
                "valueType": "xs:string",
                "required": false,
                "description": "Official name of the organization"
              },
              {
                "idShort": "DigitalFile",
                "semanticId": "https://admin-shell.io/ZVEI/HandoverDocumentation/DigitalFile/1/2",
                "modelType": "File",
                "required": true,
                "description": "Reference to the digital file"
              }
            ]
          }
        ]
      }
    ]
  },
  "constraints": [
    {
      "type": "required",
      "path": "Document",
      "description": "At least one Document entry is mandatory",
      "autoFixable": true
    },
    {
      "type": "required",
      "path": "Document/DocumentId",
      "description": "DocumentId is mandatory for each document",
      "autoFixable": true
    },
    {
      "type": "required",
      "path": "Document/DocumentId/DocumentDomainId",
      "description": "DocumentDomainId is mandatory",
      "autoFixable": true
    },
    {
      "type": "required",
      "path": "Document/DocumentId/ValueId",
      "description": "ValueId is mandatory",
      "autoFixable": true
    },
    {
      "type": "required",
      "path": "Document/DocumentVersion",
      "description": "DocumentVersion is mandatory",
      "autoFixable": true
    },
    {
      "type": "required",
      "path": "Document/DocumentVersion/Language",
      "description": "Language is mandatory",
      "autoFixable": true
    },
    {
      "type": "required",
      "path": "Document/DocumentVersion/DocumentVersionId",
      "description": "DocumentVersionId is mandatory",
      "autoFixable": true
    },
    {
      "type": "required",
      "path": "Document/DocumentVersion/Title",
      "description": "Title is mandatory",
      "autoFixable": true
    },
    {
      "type": "required",
      "path": "Document/DocumentVersion/DigitalFile",
      "description": "DigitalFile is mandatory",
      "autoFixable": false
    },
    {
      "type": "pattern",
      "path": "Document/DocumentVersion/Language",
      "params": {
        "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
      },
      "description": "Language must be ISO 639-1 format (e.g., 'en', 'de', 'en-US')",
      "autoFixable": false
    },
    {
      "type": "pattern",
      "path": "Document/DocumentVersion/SetDate",
      "params": {
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
      },
      "description": "Date must be in ISO format (YYYY-MM-DD)",
      "autoFixable": false
    },
    {
      "type": "enum",
      "path": "Document/DocumentVersion/StatusValue",
      "params": {
        "values": ["Released", "Draft", "InReview", "Withdrawn"]
      },
      "description": "Status must be one of the allowed values",
      "autoFixable": false
    }
  ]
}
